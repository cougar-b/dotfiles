defencoding utf8
escape ^a^a
startup_message off
crlf off

bind h prev
bind l next
bind n screen

bind j eval writebuf 'exec /bin/sh -c "pbcopy < /tmp/screen-exchange"'
bind o eval writebuf 'exec /bin/sh -c "open -a Firefox $(cat /tmp/screen-exchange)"'

hardstatus on
# %c: time in 24-hour (format: HH:MM)
# %w: window numbers and names
# %n: window number
# %t: window title
# %{}: color display
## =: modify
## +: add
## -: delete
## !: revert
##
## (uppercase means lite)
## b: bold
## w: white
## g: green
hardstatus alwayslastline "[%02c] %`%-w%{=b bw}%n %t%{-}%+w"

